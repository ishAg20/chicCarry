<%- include('./partials/header') %>

<div class="w-full h-screen flex items-start px-20 py-10 gap-10">
  <div class="w-[30%]">
    <h2 class="text-3xl font-semibold mb-5">Your Cart</h2>
    <div class="'flex">
      <% user.cart.forEach(function(product) { %>

      <div
        class="w-full rounded-md shadow-lg overflow-hidden mb-5 bg-[<%= product.panelcolor %>]"
      >
        <div
          class="w-full h-64 flex items-center justify-center bg-[<%= product.bgcolor %>]"
        >
          <img
            class="h-full object-cover"
            src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
            alt="<%= product.name %>"
          />
        </div>
        <div class="w-full flex justify-between px-5 py-4">
          <h3 class="text-2xl font-semibold"><%= product.name %></h3>
          <div class="flex items-center gap-2">
            <i
              class="w-7 h-7 bg-gray-200 flex rounded-full items-center justify-center ri-add-line cursor-pointer hover:bg-gray-300"
            ></i>
            <div class="px-2 py-1 rounded-md bg-gray-200 text-black">01</div>
            <i
              class="w-7 h-7 bg-gray-200 flex rounded-full items-center justify-center ri-subtract-line cursor-pointer hover:bg-gray-300"
            ></i>
          </div>
        </div>
        <div class="flex items-center justify-between px-5 py-3 border-t">
          <h4 class="text-lg font-medium">Net Total</h4>
          <h2 class="text-lg font-semibold">₹ <%= product.price %></h2>
        </div>
      </div>

      <% }) %>
    </div>
  </div>

  <div class="w-[70%] bg-gray-100 rounded-md p-5">
    <h3 class="text-2xl font-semibold mb-4">Price Breakdown</h3>
    <div class="px-10 mt-5">
      <% let totalMRP = 0; %> <% user.cart.forEach(function(product) { %> <%
      totalMRP += product.price; %> <% }) %>
      <div class="flex justify-between mt-2">
        <h4 class="w-1/3">Total MRP</h4>
        <h4>₹ <%= totalMRP %></h4>
      </div>
      <div class="flex justify-between mt-2">
        <h4 class="w-1/3">Discount on MRP</h4>
        <h4>
          ₹ <%= user.cart.reduce((total, product) => total + product.discount,
          0) %>
        </h4>
      </div>
      <div class="flex justify-between mt-2">
        <h4 class="w-1/3">Platform Fee</h4>
        <h4>₹ 20</h4>
      </div>
      <div class="flex justify-between mt-2">
        <h4 class="w-1/3">Shipping Fee</h4>
        <h4>FREE</h4>
      </div>
    </div>
    <div class="w-full h-[1px] bg-gray-300 mt-10"></div>
    <div class="flex justify-between mt-5 font-semibold">
      <h3 class="w-1/3 text-xl">Total Amount</h3>
      <h3 class="text-xl text-green-600">
        ₹ <%= totalMRP - user.cart.reduce((total, product) => total +
        product.discount, 0) %>
      </h3>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
